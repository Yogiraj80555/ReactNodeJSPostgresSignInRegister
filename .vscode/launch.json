    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Server JWT and PERN",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server\\index.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        }  
        
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Debug React",
            "url" : "http://192.168.0.100:80",
            "webRoot": "${workspaceFolder}\\client"
        }
    ]
}